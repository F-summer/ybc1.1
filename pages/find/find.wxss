/* client/pages/1_0/find/find.wxss */
.tab-scoller {
  background: linear-gradient(to bottom, #2262fc, rgba(57, 134, 222, 0.84));
  height: 3rem;
  white-space: nowrap;
  display: flex;
}
/*取消移动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.active {
  color: #000 !important;
  background-color: #fff;
}

.tab-view {
  text-align: center;
  color: #fff;
  font-size: 1rem;
  height: 1.2rem;
  width: 4rem;
  margin-top: 1rem;
  border-right: 1px solid #fff;
  display: inline-block;
  line-height: 1.2rem;
}

.tab-text {
  display: block;
  bottom: 0.4rem;
  position: relative;
  height: 1.5rem;
  margin: 0 5%;
  border-radius: 0.5rem;
  padding: 0.3rem 0.2rem 0;
  color: #fff;
}
.list-box {
  white-space: nowrap;
  display: flex;
  padding-left: 32rpx;
}

.list-box .item {
  width: 186rpx;
  height: 90rpx;
  border: solid 1px #999;
  display: inline-block;
  margin-right: 40rpx;
  padding: 16rpx;
}

.list-box .item.active {
  background-color: #f5f9ff;
  border: solid 1px #4284f7;
}

.list-box .item .title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  text-align: center;
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-box .item.active .title {
  color: #4284f7;
}

.list-box .item .num {
  font-size: 22rpx;
  color: #333;
  display: block;
  text-align: center;
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-box .item.active .num {
  color: #4284f7;
}

.content-list {
  padding-bottom: 250rpx;
  height: 100%;
  padding-top: 32rpx;
}
