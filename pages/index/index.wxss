.nav {
  background: #fff;
  top: 0;
  left: 0;
  width: 100%;
  position: fixed;
  z-index: 9999;
  height: 88rpx;
  padding-right: 80rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.nav-cont {
  width: 100%;
  height: 88rpx;
}

.nav-cont .list-info {
  font-size: 0;
  padding: 0 32rpx;
  padding-right: 60rpx;
  white-space: nowrap;
}

.nav-cont .list-info .list-item {
  display: inline-block;
  position: relative;
  font-size: 34rpx;
  color: #333;
  margin-right: 30rpx;
  line-height:32rpx;
}

.nav-cont .list-info .list-item.active {
  font-size: 34rpx;
  color: #4284f7;
  font-weight: bold;
}

