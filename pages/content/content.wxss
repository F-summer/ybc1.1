/* pages/1_0/content/content.wxss */
@import "../../wxParse/wxParse.wxss";
page{
  padding: 0 32rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.title {
  font-size: 38rpx;
  line-height: 57rpx;
  font-family: "PingFangSC";
  color: rgb(51, 51, 51);
  padding: 20rpx 0;
}

.account-info {
  align-items: center;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.account-name {
  font-size: 28rpx;
  font-family: "PingFangSC";
  color: rgb(51, 51, 51);
}

.date {
  font-size: 24rpx;
  font-family: "PingFangSC";
  color: rgb(153, 153, 153);
}

.bottom {
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  height: 100rpx;
   background-color: white; 
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #ebebeb;
}

.bottom-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  font-family: "PingFangSC";
  color: rgb(153, 153, 153);
}

.bottom-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.btn {
  margin: 0;
  background-color: transparent;
}

.btn::after {
  border: none;
}
view{
  font-size: 34rpx;
  line-height: 50rpx;
  color: #333;
}
image{
  display: block;
  width: 100%;
  margin: auto;
}
.wxParse-section{
  margin-top: 74rpx;
}
.WxEmojiView{
  margin: 30rpx 0;
}
.accountImg{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 15rpx;
}